<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="maderski.bluetoothautoplaymusic.SettingsActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/settings_menu"
        android:id="@+id/settingsText"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/colorPrimary"
        android:typeface="monospace" />

    <ImageView
        android:layout_gravity="center_horizontal"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@android:drawable/divider_horizontal_bright"
        android:background="@color/colorAccent"
        android:paddingLeft="150dp"
        android:paddingRight="150dp"
        android:id="@+id/imageView2" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrollView" >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp">

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_play_music"
                android:id="@+id/auto_play"
                android:checked="false"
                android:switchPadding="100dp"
                android:paddingTop="10dp"
                android:onClick="autoPlaySwitch"
                android:textSize="16dp"
                android:paddingBottom="2dp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/option_play_music_caption"
                android:id="@+id/playMusicExplaination"
                android:textSize="12dp" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_power_required"
                android:id="@+id/power_connected"
                android:checked="false"
                android:paddingTop="20dp"
                android:onClick="powerConnectedSwitch"
                android:textSize="16dp"
                android:switchPadding="100dp"
                android:paddingBottom="2dp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/option_power_required_caption"
                android:id="@+id/powerRequiredExplaination"
                android:textSize="12dp" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_go_home"
                android:id="@+id/send_to_background"
                android:checked="false"
                android:paddingTop="20dp"
                android:onClick="sendToBackgroundSwitch"
                android:textSize="16dp"
                android:switchPadding="100dp"
                android:paddingBottom="2dp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/option_go_home_caption"
                android:id="@+id/GoHomeExplaination"
                android:textSize="12dp" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_call_completed"
                android:id="@+id/wait_till_off_phone"
                android:checked="false"
                android:paddingTop="20dp"
                android:onClick="waitTillOffPhoneSwitch"
                android:textSize="16dp"
                android:switchPadding="100dp"
                android:paddingBottom="2dp"
                android:textColor="@color/colorPrimary"/>

            <TextView
                android:layout_width="264dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/option_call_completed_caption"
                android:id="@+id/CallCompletedExplaination"
                android:textSize="12dp" />

            <Switch
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/option_auto_brightness"
                android:id="@+id/auto_brightness"
                android:checked="false"
                android:paddingTop="20dp"
                android:onClick="autoBrightnessSwitch"
                android:textSize="16dp"
                android:switchPadding="100dp"
                android:paddingBottom="2dp"
                android:textColor="@color/colorPrimary" />

            <TextView
                android:layout_width="246dp"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="@string/option_auto_brightness_caption"
                android:id="@+id/autoBrightnessExplaination"
                android:textSize="12dp" />

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="@string/option_manual_brightness"
                    android:id="@+id/manualBrtLabel"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="7dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:paddingTop="20dp" />

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_horizontal">

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bright_time_button_text"
                        android:id="@+id/brighttimebutton"
                        android:onClick="brightBrightnessButton"
                        android:background="@drawable/on_state"
                        android:textColor="@color/white"
                        style="?android:attr/borderlessButtonStyle"
                        android:paddingLeft="20dp"
                        android:paddingRight="20dp" />

                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/dim_time_button_text"
                        android:id="@+id/dimtimebutton"
                        android:onClick="dimBrightnessButton"
                        android:background="@drawable/on_state"
                        android:textColor="@color/white"
                        style="?android:attr/borderlessButtonStyle"
                        android:paddingLeft="35dp"
                        android:paddingRight="35dp" />

                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Set MAX media volume"
                    android:id="@+id/userSetMaxVolumeLabel"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="7dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:paddingTop="20dp" />

                <SeekBar
                    android:id="@+id/max_volume_seekBar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="DAYS to launch Maps"
                    android:id="@+id/daysToLaunchLabel"
                    android:layout_gravity="center_horizontal"
                    android:paddingBottom="7dp"
                    android:textColor="@color/colorPrimary"
                    android:textSize="16dp"
                    android:paddingTop="20dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/daysChkBoxLL">
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Monday"
                        android:id="@+id/mondayChkBox"
                        android:layout_gravity="left|center_horizontal"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tuesday"
                        android:id="@+id/tuesdayChkBox"
                        android:layout_gravity="left|center_horizontal"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="etc..."
                        android:id="@+id/etcChkBox"
                        android:layout_gravity="left|center_horizontal"
                        android:checked="false" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
