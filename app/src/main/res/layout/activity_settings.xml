<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="maderski.bluetoothautoplaymusic.SettingsActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="@string/settings_menu"
        android:id="@+id/settingsText"
        android:layout_gravity="center_horizontal"
        android:textSize="24dp"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/colorPrimary"
        android:typeface="monospace" />

    <ImageView
        android:layout_gravity="center_horizontal"
        android:paddingTop="1dp"
        android:paddingBottom="1dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:src="@android:drawable/divider_horizontal_bright"
        android:background="@color/colorAccent"
        android:paddingLeft="150dp"
        android:paddingRight="150dp"
        android:id="@+id/imageView2" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp">

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAY music when player is launched"
            android:id="@+id/auto_play"
            android:checked="false"
            android:switchPadding="60dp"
            android:paddingBottom="10dp"
            android:paddingTop="10dp"
            android:onClick="autoPlaySwitch" />

        <Switch
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ONLY launch when power is connected to phone"
            android:id="@+id/power_connected"
            android:checked="false"
            android:paddingTop="10dp"
            android:paddingBottom="10dp" />
    </LinearLayout>

</LinearLayout>
