<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="maderski.bluetoothautoplaymusic.MainActivity"
    tools:showIn="@layout/activity_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/ScrollView"
        android:fillViewport="false">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/OnConnect">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="On Connect"
                    android:id="@+id/textView3"
                    android:layout_gravity="center_horizontal"
                    android:textSize="24dp"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:textColor="#FF2F33A4"
                    android:typeface="monospace" />

                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@android:drawable/divider_horizontal_bright"
                    android:background="#f81d69"
                    android:paddingLeft="150dp"
                    android:paddingRight="150dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:paddingLeft="20dp">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:paddingTop="10dp">

                        <ToggleButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ToggleButton"
                            android:id="@+id/MapsToggleButton"
                            android:checked="false"
                            android:onClick="mapsToggleButton" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Launch Maps"
                            android:id="@+id/textView4"
                            android:textSize="16dp"
                            android:paddingLeft="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                        <ToggleButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ToggleButton"
                            android:id="@+id/KeepONToggleButton"
                            android:checked="false"
                            android:onClick="keepONToggleButton" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Keep Screen ON"
                            android:id="@+id/textView5"
                            android:textSize="16dp"
                            android:paddingLeft="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ToggleButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New ToggleButton"
                            android:id="@+id/PriorityToggleButton"
                            android:checked="false"
                            android:onClick="priorityToggleButton" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Put phone in Priority Mode"
                            android:id="@+id/textView6"
                            android:textSize="16dp"
                            android:paddingLeft="5dp" />
                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ToggleButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New ToggleButton"
                            android:id="@+id/VolumeMAXToggleButton"
                            android:checked="false"
                            android:onClick="volumeMAXToggleButton" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Set Media Volume to MAX"
                            android:id="@+id/textView7"
                            android:textSize="16dp"
                            android:paddingLeft="5dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ToggleButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New ToggleButton"
                            android:id="@+id/LaunchMusicPlayerToggleButton"
                            android:checked="false"
                            android:onClick="launchMusicPlayerToggleButton" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Launch Music Player"
                            android:id="@+id/textView8"
                            android:textSize="16dp"
                            android:paddingLeft="5dp" />

                    </LinearLayout>
                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <ToggleButton
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="New ToggleButton"
                            android:id="@+id/UnlockToggleButton"
                            android:checked="false"
                            android:onClick="unlockScreenToggleButton" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:text="Dismiss KeyGuard"
                            android:id="@+id/textView9"
                            android:textSize="16dp"
                            android:paddingLeft="5dp" />

                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/BTDevices">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Bluetooth Devices"
                    android:id="@+id/textView2"
                    android:layout_gravity="center_horizontal"
                    android:textSize="24dp"
                    android:textColor="#FF2F33A4"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:typeface="monospace" />
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@android:drawable/divider_horizontal_bright"
                    android:background="#f81d69"
                    android:paddingLeft="150dp"
                    android:paddingRight="150dp" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:id="@+id/checkBoxLL"
                    android:gravity="center_horizontal"
                    android:paddingTop="10dp">

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New CheckBox"
                        android:id="@+id/checkBox"
                        android:layout_gravity="center_horizontal"
                        android:checked="false" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New CheckBox"
                        android:id="@+id/checkBox2"
                        android:layout_gravity="center_horizontal" />

                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New CheckBox"
                        android:id="@+id/checkBox3"
                        android:layout_gravity="center_horizontal" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/MusicPlayers"
                android:gravity="center_horizontal"
                android:paddingBottom="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceLarge"
                    android:text="Music Players"
                    android:id="@+id/textView"
                    android:layout_gravity="center_horizontal"
                    android:textSize="24dp"
                    android:textColor="#FF2F33A4"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    android:typeface="monospace" />
                <ImageView
                    android:layout_gravity="center_horizontal"
                    android:paddingTop="1dp"
                    android:paddingBottom="1dp"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:src="@android:drawable/divider_horizontal_bright"
                    android:background="#f81d69"
                    android:paddingLeft="150dp"
                    android:paddingRight="150dp" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:id="@+id/rdoMusicPlayers"
                    android:paddingTop="10dp">

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New RadioButton"
                        android:id="@+id/radioButton"
                        android:layout_gravity="center_horizontal" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New RadioButton"
                        android:id="@+id/radioButton2"
                        android:layout_gravity="center_horizontal" />

                    <RadioButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="New RadioButton"
                        android:id="@+id/radioButton3"
                        android:layout_gravity="center_horizontal" />
                </RadioGroup>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>
