<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activities.ForDebugAndTestActivity">

    <Button
        android:id="@+id/bn_bluetooth_connected_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BT Connected"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bn_bluetooth_disconnected_test"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_chainStyle="packed"/>

    <Button
        android:id="@+id/bn_bluetooth_disconnected_test"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BT Disconnected"
        app:layout_constraintTop_toBottomOf="@id/bn_bluetooth_connected_test"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>